<!DOCTYPE html>
<html>
<head>
  
  <title>Admin Dashboard</title>
  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
  <style>
    * {
      box-sizing: border-box;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }
    
    body {
      margin: 0;
      padding: 0;
    }
    
    .wrapper {
      display: flex;
      position: relative;
    }
    
    .sidebar {
      width: 250px;
      height: 100%;
      background-color: #333;
      color: #fff;
      padding: 20px;
    }
    
    .sidebar h2 {
      margin-top: 0;
    }
    
    ul {
      list-style: none;
      padding: 0;
      margin: 0;
    }
    
    li a {
      display: block;
      padding: 10px;
      color: #fff;
      text-decoration: none;
    }
    
    li a:hover {
      background-color: #555;
    }
    
    .main-content {
        flex: 1;
        padding: 20px;
    }
    a:hover, a:visited, a:link, a:active
    {
        text-decoration: none;
        color: #fff;
    }
    .container {
      background-color: #5cb85c;
      margin: 50px auto;
      padding: 20px;
      max-width: 600px;
      border-radius: 10px;
      box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.5);
      width: 340px;
    }
    .status,
    .textbox {
      display: block;
      margin: 10px 0;
      width: 100%;
      padding: 10px;
      border-radius: 5px;
      border: none;
      background-color: #f5f5f5;
      font-size: 16px;
      color: #333333;
    }


	.button {
		display: block;
		margin: 20px auto;
		padding: 10px 20px;
		border-radius: 5px;
		border: none;
		background-color: #333333;
		color: #ffffff;
		font-size: 16px;
		cursor: pointer;
		transition: background-color 0.3s ease-in-out;
	}

	.button:hover {
		background-color: #666666;
	}

  #status-circles {
    position: absolute;
    top: 50%;
    right: 0;
    transform: translateY(-50%);
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
  }

  .status-circle {
    width: 110px;
    height: 110px;
    border-radius: 50%;
    background-color: red;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-right: 100px;
    color: black;
    font-weight: bold;
    margin-bottom: 100px;
  }

  .active{
    width: 110px;
    height: 110px;
    border-radius: 50%;
    background-color: green;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-right: 100px;
    color: white;
    animation: pulsing 1s ease-out infinite;
  }

  @keyframes pulsing {
    0% {
      transform: scale(1);
    }
    50% {
      transform: scale(1.1);
    }
    100% {
      transform: scale(1);
    }
  }

  .done {
    width: 110px;
    height: 110px;
    border-radius: 50%;
    background-color: green;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-right: 100px;
    color: white;
  }
  
  .status-line {
    position: absolute;
    top: 50%;
    left: 25%;
    transform: translate(-20%, -60%);
    width: 10px;
    height: 450px;
    background-color: black;
    z-index: -1;
  }


  </style>
</head>
<body>
  <div class="wrapper">
    <div class="sidebar">
      <h2><a href="/admin">Dashboard</a></h2>
      <ul>
        <li><a href="/productform">Add product</a></li>
        <li><a href="/ordersform">Orders</a></li>
        <li><a href="#">Settings</a></li>
        <li><a href="#">Logout</a></li>
      </ul>
    </div>

    <div class="container">
        Order ID
		<input type="text" class="textbox" value="<%= order._id %>" id="orderID" readonly>
        First Name
		<input type="text" class="textbox" value="<%= order.firstName %>" id="firstName">
        Last Name
		<input type="text" class="textbox" value="<%= order.lastName %>" id="lastName">
        E-Mail
		<input type="text" class="textbox" value="<%= order.email %>" id="email">
        Phone Number
		<input type="text" class="textbox" value="<%= order.phoneNumber %>" id="phoneNumber">
        City
		<input type="text" class="textbox" value="<%= order.city %>" id="city">
        Address
		<input type="text" class="textbox" value="<%= order.address %>" id="address">
        Postal Code
		<input type="text" class="textbox" value="<%= order.postalCode %>" id="postalCode">
        Ordered products
    <input type="text" class="textbox" value="<%= order.orderedProducts %>" id="orderedProducts">
        Price
    <input type="text" class="textbox" value="<%= order.totalPrice %>" id="totalPrice">
        Status
    <select name="status" class="status" id="status">
      <option value="processing" <%= order.status === "processing" ? "selected" : "" %>>processing</option>
      <option value="shipped" <%= order.status === "shipped" ? "selected" : "" %>>shipped</option>
      <option value="closed" <%= order.status === "closed" ? "selected" : "" %>>closed</option>
    </select>

  
		<button class="button" onclick="senddata()">Save</button>
  	</div>
  </div>
  </div>

  <div id="status-circles">
    <div class="status-circle" id="processing-circle">
      <span class="status-label">‚öôÔ∏è Processing</span>
    </div>
    <div class="status-circle" id="shipped-circle">
      <span class="status-label">üì¶ Shipped</span>
    </div>
    <div class="status-circle" id="closed-circle">
      <span class="status-label">‚úÖ Closed</span>
    </div>
    <div class="status-line"></div>
  </div>
  
  <script>
    $(document).ready(function() {
    updateStatusCircles();

    $('#status').on('change', function() {
        updateStatusCircles();
    });

    function updateStatusCircles() {
        var status = $('#status').val();

        if (status === 'processing') {
            $('#processing-circle').addClass('active').addClass('done');
            $('#shipped-circle').removeClass('active').removeClass('done');
            $('#closed-circle').removeClass('active').removeClass('done');
        } else if (status === 'shipped') {
            $('#processing-circle').removeClass('active').addClass('done');
            $('#shipped-circle').addClass('active').addClass('done');
            $('#closed-circle').removeClass('active').removeClass('done');
        } else if (status === 'closed') {
            $('#processing-circle').removeClass('active').addClass('done');
            $('#shipped-circle').removeClass('active').addClass('done');
            $('#closed-circle').addClass('active').addClass('done');
        }
    }
});
  </script>

</div>
</body>
<script>
  function senddata() {
    const apiUrl = new URL("http://localhost:5000/api/editorder/");

    const statusDropdown = document.getElementById("status");
    const order_data = {
      _id: orderID.value,
      firstName: firstName.value,
      lastName: lastName.value,
      email: email.value,
      phoneNumber: phoneNumber.value,
      city: city.value,
      address: address.value,
      postalCode: postalCode.value,
      status: statusDropdown.value,
      orderedProducts: orderedProducts.value,
      totalPrice: totalPrice.value
    };

    fetch(apiUrl, {
      method: "POST",
      headers: { "Content-Type": "application/json" },
      body: JSON.stringify({orderdata: order_data}),
      });

      if(confirm('Successfully updated data. Click OK')){
        window.location.reload();  
      }
  };

  statusDropdown.addEventListener("change", () => {
  order_data.status = statusDropdown.value;
});

</script>
</html>
